# ============================
# Story External Watcher
# Environment example
# ============================

# REQUIRED
STORY_RPC_HTTP="https://YOUR_RPC_ENDPOINT"
VALCONS_ADDRESS="YOUR_VALIDATOR_CONSENSUS_ADDRESS"

TELEGRAM_BOT_TOKEN="YOUR_TELEGRAM_BOT_TOKEN"
TELEGRAM_CHAT_ID="YOUR_TELEGRAM_CHAT_ID"

# Optional label (free text)
NETWORK_LABEL="your-network-name"

# ============================
# Polling & backfill
# ============================
POLL_INTERVAL_SEC="2"
BACKFILL_LAST_N="100"

# ============================
# State persistence
# ============================
STATE_FILE="/var/lib/story-external-watcher/state.json"

# ============================
# RPC robustness
# ============================
VALIDATORS_PAGES_MAX="12"
VALIDATORS_PER_PAGE="100"
RETRY_HTTP="2"

# ============================
# Anti false-positive logic
# ============================
BLOCK_CONFIRM_LAG="2"
FRESH_BLOCK_SKIP_SEC="3"
DOUBLE_CONFIRM="true"
PENDING_TTL_SEC="30"
